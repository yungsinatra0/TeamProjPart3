model User {
  uid      String    @id @default(uuid())
  name     String    @unique
  password String
  team     Project[]
  messages Message[]
  chats    Chat[]
  tasks    Task[]
}

model Message {
  uid      Int      @id @default(autoincrement())
  content  String
  sender   User     @relation(fields: [senderId], references: [uid])
  senderId String
  chat     Chat     @relation(fields: [chatId], references: [uid])
  chatId   Int
  created  DateTime @default(now())
}

model Chat {
  uid      Int       @id @default(autoincrement())
  messages Message[]
  users    User[]
}

model Task {
  uid         Int      @id @default(autoincrement())
  name        String
  description String
  created     DateTime @default(now())
  workHours   Int
  completed   Boolean  @default(false)
  assignees   User[]
  project     Project? @relation(fields: [projectId], references: [uid])
  projectId   Int?
}

model Project {
  uid   Int    @id @default(autoincrement())
  name  String
  tasks Task[]
  users User[]
}
